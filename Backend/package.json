{
  "name": "blockchain-lottery-backend",
  "version": "1.0.0",
  "description": "Backend service for blockchain lottery data aggregation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/config/database.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/config/database.ts",
    "deploy": "npm run migration:run && npm run start",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "fix": "yarn lint:fix && yarn format"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@coral-xyz/anchor": "^0.31.1",
    "@helium/cron-sdk": "^0.0.8",
    "@helium/tuktuk-sdk": "^0.0.8",
    "@orao-network/solana-vrf-cb": "^0.3.1",
    "@solana/web3.js": "^1.98.2",
    "@switchboard-xyz/common": "^5.6.1",
    "@switchboard-xyz/on-demand": "^3.8.2",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.13.2",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.6.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@noble/hashes": "1.8.0"
  },
  "overrides": {
    "@noble/hashes": "1.8.0"
  }
}
