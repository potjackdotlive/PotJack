{
  "name": "raffle-program",
  "version": "1.0.0",
  "description": "Multi-token raffle program on Solana with BTC-denominated pricing",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "clean": "anchor clean",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet-beta",
    "test": "anchor test",
    "test:unit": "anchor test tests/bclot.ts",
    "start-validator": "solana-test-validator --reset",
    "stop-validator": "pkill -f solana-test-validator",
    "keys": "anchor keys list",
    "keys:sync": "anchor keys sync",
    "idl:build": "anchor idl build",
    "idl:deploy": "anchor idl deploy",
    "verify": "anchor verify",
    "upgrade": "anchor upgrade",
    "localnet": "solana config set --url localhost",
    "devnet": "solana config set --url devnet",
    "mainnet": "solana config set --url mainnet-beta",
    "airdrop": "solana airdrop 2",
    "balance": "solana balance",
    "logs": "solana logs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "docs": "typedoc --out docs src/",
    "coverage": "nyc anchor test"
  },
  "keywords": [
    "solana",
    "anchor",
    "raffle",
    "blockchain",
    "defi",
    "rust",
    "cryptocurrency",
    "spl-token",
    "switchboard",
    "vrf"
  ],
  "author": {
    "name": "Raffle Team",
    "email": "dev@raffle.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/raffle-team/raffle-program.git"
  },
  "bugs": {
    "url": "https://github.com/raffle-team/raffle-program/issues"
  },
  "homepage": "https://raffle.com",
  "dependencies": {
    "@codama/nodes-from-anchor": "^1.3.1",
    "@codama/renderers-js": "^1.5.0",
    "@coral-xyz/anchor": "^0.31.1",
    "@helium/cron-sdk": "^0.0.8",
    "@helium/spl-utils": "^0.10.3",
    "@helium/tuktuk-idls": "^0.0.8",
    "@helium/tuktuk-sdk": "^0.0.8",
    "@orao-network/solana-vrf": "^0.7.0",
    "@orao-network/solana-vrf-cb": "^0.3.1",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.0",
    "@switchboard-xyz/on-demand": "3.8.2",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@codama/cli": "^1.3.7",
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.3.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "resolutions": {
    "@solana/web3.js": "^1.95.0",
    "@noble/hashes": "1.8.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tests/**/*",
      "coverage/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "config": {
    "solana": {
      "cluster": "devnet",
      "wallet": "~/.config/solana/id.json"
    },
    "anchor": {
      "version": "0.31.1"
    }
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/raffle-program"
  }
}
